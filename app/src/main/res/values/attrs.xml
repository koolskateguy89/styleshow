<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PicassoImageView">
        <attr name="noPlaceholder" format="boolean" />
        <attr name="placeholder" format="reference" />
        <attr name="transform" format="enum">
            <enum name="none" value="0" />
            <enum name="cropCircle" value="1" />
            <enum name="cropSquare" value="2" />
            <enum name="grayscale" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DynamicPostsView">
        <attr name="layoutType" format="enum">
            <enum name="grid" value="0" />
            <enum name="carousel" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PostCaptionView">
        <attr name="caption" format="string" />
    </declare-styleable>

    <declare-styleable name="PostActionsView">
        <attr name="liked" format="boolean" />
        <attr name="numLikes" format="integer" />
        <attr name="numComments" format="integer" />
        <attr name="deletable" format="boolean" />
    </declare-styleable>
</resources>
