<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <variable
                name="post"
                type="com.styleshow.domain.model.Post" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <com.styleshow.components.PostAuthor
                android:id="@+id/view_post_author"
                app:author="@{post.author}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        <com.styleshow.components.SquareFrameLayout
                android:id="@+id/image_wrapper"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/view_post_author"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
            <com.styleshow.components.PicassoImageView
                    android:id="@+id/iv_image"
                    android:src="@{post.imageUrl}"
                    tools:src="@drawable/ic_launcher_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/post_picture_description"
                    />
        </com.styleshow.components.SquareFrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ll_actions"
                android:orientation="horizontal"
                android:layout_width="409dp"
                android:layout_height="83dp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/image_wrapper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="actions: Like, comment, share"
                    android:ems="10"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/tv_caption"
                tools:text="Caption"
                android:text="@{post.caption}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_actions"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
