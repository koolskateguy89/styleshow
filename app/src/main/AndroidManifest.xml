<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <!--
    TODO: test on lower android version, like 29/30
    TODO?: add image permission
    -->

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".StyleShowApp"
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.StyleShow"
            tools:targetApi="31">
        <!-- New Post Activity -->
        <activity
                android:name=".ui.new_post.NewPostActivity"
                android:exported="false" />

        <!-- Post Activity -->
        <activity
                android:name=".ui.post.PostActivity"
                android:exported="false" />

        <!-- User profile Activity -->
        <activity
                android:name=".ui.user_profile.UserProfileActivity"
                android:exported="false" />

        <!-- Messages Activity -->
        <activity
                android:name=".ui.messages.MessagesActivity"
                android:exported="false" />

        <!-- Main navigation Activity -->
        <activity
                android:name=".ui.MainNavigationActivity"
                android:exported="false" />

        <!-- Login Activity -->
        <activity
                android:name=".ui.login.LoginActivity"
                android:exported="false" />

        <!-- Main Activity -->
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:theme="@style/Theme.StyleShow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- https://developer.android.com/training/data-storage/shared/photopicker#device-availability -->
        <!-- Trigger Google Play services to install the backported photo picker module. -->
        <service android:name="com.google.android.gms.metadata.ModuleDependencies"
                android:enabled="false"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.metadata.MODULE_DEPENDENCIES" />
            </intent-filter>
            <meta-data android:name="photopicker_activity:0:required" android:value="" />
        </service>
    </application>

</manifest>
